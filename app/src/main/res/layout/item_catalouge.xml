<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_catalogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        tools:context=".CatalogueFragment"
        android:backgroundTint="@color/activity_home_bg"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_catalogue_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_88"
            android:background="@drawable/edt_phone_no_bg"

            >
            <TextView
                android:id="@+id/txt_catalogue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="@string/TxtWomenFashionCatalogue"
                android:textAppearance="@style/IntroWelcomeMsg"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_marginStart="@dimen/dp_16"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>